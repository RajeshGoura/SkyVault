<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Files</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }
    
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      padding: 40px 20px;
      color: #333;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }
    
    /* Header Styles */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      padding: 20px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .header h1 {
      color: #4a4a4a;
      font-weight: 600;
      font-size: 28px;
    }
    
    .header h1 span {
      color: #667eea;
    }
    
    .logout-btn {
      padding: 12px 24px;
      background: linear-gradient(to right, #ff416c, #ff4b2b);
      color: white;
      text-decoration: none;
      border-radius: 30px;
      font-weight: 500;
      transition: all 0.3s ease;
      box-shadow: 0 4px 10px rgba(255, 75, 43, 0.3);
      border: none;
      cursor: pointer;
    }
    
    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 75, 43, 0.4);
    }
    
    /* Notification */
    .notification {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #4BB543;
      color: white;
      padding: 15px 25px;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      z-index: 1000;
      animation: slideIn 0.5s ease-out, fadeOut 0.5s ease 2.5s forwards;
    }
    
    /* Upload Button */
    .upload-btn {
      display: block;
      margin: 0 auto 30px;
      padding: 15px 30px;
      background: linear-gradient(to right, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 30px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    
    .upload-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.5);
    }
    
    /* File List */
    .file-list {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .file-list p {
      text-align: center;
      color: #888;
      padding: 20px;
    }
    
    .file-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      border-bottom: 1px solid #eee;
      transition: all 0.3s ease;
    }
    
    .file-item:hover {
      background: rgba(102, 126, 234, 0.05);
      transform: translateX(5px);
    }
    
    .file-name {
      flex: 1;
      font-weight: 500;
      color: #444;
      word-break: break-all;
    }
    
    .file-actions a {
      padding: 8px 16px;
      background: linear-gradient(to right, #00b09b, #96c93d);
      color: white;
      text-decoration: none;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .file-actions a:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 10px rgba(0, 176, 155, 0.3);
    }
    
    /* Modal Styles */
    .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    z-index: 1000;
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.3s ease;
  }
  
  .modal-content {
    background: white;
    padding: 40px;
    border-radius: 15px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    transform: translateY(0);
    animation: modalSlideIn 0.4s ease;
    display: flex;
    flex-direction: column;
    gap: 30px; /* This adds consistent spacing between elements */
  }
  
  .modal-content h3 {
    margin-bottom: 0; /* Remove the large bottom margin */
    color: #4a4a4a;
    text-align: center;
    font-size: 22px;
  }
  
  .file-drop-area {
    border: 2px dashed #667eea;
    border-radius: 10px;
    padding: 40px 20px; /* Adjusted padding */
    text-align: center;
    margin: 0; /* Remove margin-bottom since we're using gap */
    cursor: pointer;
    transition: all 0.3s ease;
    background: rgba(102, 126, 234, 0.05);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    min-height: 150px; /* Give it a minimum height */
  }
  
  .file-drop-area:hover {
    background: rgba(102, 126, 234, 0.1);
  }
  
  .file-drop-area input[type="file"] {
    display: none;
  }
  
  .form-buttons {
    display: flex;
    justify-content: space-between;
    gap: 15px;
    margin-top: 20px; /* Add space above buttons */
  }
  
    
    .submit-btn {
      flex: 1;
      padding: 12px;
      background: linear-gradient(to right, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 10px rgba(102, 126, 234, 0.3);
    }
    
    .close-btn {
      flex: 1;
      padding: 12px;
      background: #f1f1f1;
      color: #666;
      border: none;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .close-btn:hover {
      background: #e0e0e0;
      transform: translateY(-2px);
    }
    
    /* Animations */
    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    
    @keyframes fadeOut {
      to {
        opacity: 0;
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    @keyframes modalSlideIn {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        gap: 15px;
        text-align: center;
      }
      
      .file-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
      
      .file-actions {
        align-self: flex-end;
      }
      
      .form-buttons {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <% if (uploadSuccess) { %>
      <div class="notification">File uploaded successfully!</div>
    <% } %>

    <div class="header">
      <h1>Welcome <span><%= user.username %></span></h1>
      <a href="/user/logout" class="logout-btn">Logout</a>
    </div>

    <button class="upload-btn" onclick="openModal()">Upload File</button>

    <div class="file-list">
      <% if (files && files.length > 0) { %>
        <% files.forEach(file => { %>
          <div class="file-item">
            <div class="file-name"><%= file.filename %></div>
            <div class="file-actions">
              <a href="/download/<%= file._id %>" download="<%= file.filename %>">Download</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No files uploaded yet.</p>
      <% } %>
    </div>

    <div class="modal" id="uploadModal">
      <div class="modal-content">
        <h3>Upload Your File</h3>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <label class="file-drop-area">
            Click here to select a file
            <input type="file" name="file" required />
          </label>
          <div class="form-buttons">
            <button type="submit" class="submit-btn">Submit</button>
            <button type="button" class="close-btn" onclick="closeModal()">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
  function openModal() {
    document.getElementById('uploadModal').style.display = 'flex';
  }

  function closeModal() {
    document.getElementById('uploadModal').style.display = 'none';
    // Reset the drop area text when closing modal
    const dropArea = document.querySelector('.file-drop-area');
    if (dropArea) {
      dropArea.innerHTML = 'Click here to select a file <input type="file" name="file" required />';
      setupFileDropArea(); // Reinitialize event listeners
    }
  }

  // Function to setup file drop area event listeners
  function setupFileDropArea() {
    const dropArea = document.querySelector('.file-drop-area');
    if (dropArea) {
      const fileInput = dropArea.querySelector('input[type="file"]');
      
      // Handle file selection via click
      fileInput.addEventListener('change', function() {
        if (this.files.length > 0) {
          dropArea.textContent = this.files[0].name;
        }
      });
      
      // Highlight file drop area when file is dragged over
      dropArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropArea.style.background = 'rgba(102, 126, 234, 0.2)';
        dropArea.style.borderColor = '#4a4a4a';
      });
      
      dropArea.addEventListener('dragleave', () => {
        dropArea.style.background = 'rgba(102, 126, 234, 0.05)';
        dropArea.style.borderColor = '#667eea';
      });
      
      dropArea.addEventListener('drop', (e) => {
        e.preventDefault();
        dropArea.style.background = 'rgba(102, 126, 234, 0.05)';
        dropArea.style.borderColor = '#667eea';
        fileInput.files = e.dataTransfer.files;
        dropArea.textContent = e.dataTransfer.files[0].name;
      });
    }
  }

  // Auto-close notification after 3 seconds
  document.addEventListener('DOMContentLoaded', function() {
    const notification = document.querySelector('.notification');
    if (notification) {
      setTimeout(() => {
        notification.style.display = 'none';
        notification.style.animation = 'fadeOut 0.5s ease forwards';
        setTimeout(() => notification.remove(), 500);
      }, 3000);
    }
    
    // Initialize file drop area
    setupFileDropArea();
  });
</script>
</body>
</html>