<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Files</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }
    
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      padding: 20px;
      color: #333;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
    }
    
    /* Header Styles */
    .header {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 30px;
      padding: 15px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .header h1 {
      color: #4a4a4a;
      font-weight: 600;
      font-size: 24px;
      margin-bottom: 15px;
      text-align: center;
    }
    
    .header h1 span {
      color: #667eea;
    }
    
    .logout-btn {
      padding: 10px 20px;
      background: linear-gradient(to right, #ff416c, #ff4b2b);
      color: white;
      text-decoration: none;
      border-radius: 30px;
      font-weight: 500;
      transition: all 0.3s ease;
      box-shadow: 0 4px 10px rgba(255, 75, 43, 0.3);
      border: none;
      cursor: pointer;
      font-size: 14px;
      width: 100%;
      max-width: 200px;
    }
    
    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 75, 43, 0.4);
    }
    
    /* Notification */
    .notification {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #4BB543;
      color: white;
      padding: 12px 20px;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      z-index: 1000;
      animation: slideIn 0.5s ease-out, fadeOut 0.5s ease 2.5s forwards;
      max-width: 90%;
      font-size: 14px;
    }
    
    /* Upload Button */
    .upload-btn {
      display: block;
      margin: 0 auto 25px;
      padding: 12px 25px;
      background: linear-gradient(to right, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 30px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
      width: 100%;
      max-width: 300px;
    }
    
    .upload-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.5);
    }
    
    /* File List */
    .file-list {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 12px;
      padding: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .file-list p {
      text-align: center;
      color: #888;
      padding: 15px;
      font-size: 14px;
    }
    
    .file-item {
      display: flex;
      flex-direction: column;
      padding: 12px;
      border-bottom: 1px solid #eee;
      transition: all 0.3s ease;
      gap: 10px;
    }
    
    .file-item:hover {
      background: rgba(102, 126, 234, 0.05);
      transform: translateX(5px);
    }
    
    .file-name {
      font-weight: 500;
      color: #444;
      word-break: break-all;
      font-size: 14px;
    }
    
    .file-actions {
      align-self: flex-end;
    }
    
    .file-actions a {
      padding: 6px 12px;
      background: linear-gradient(to right, #00b09b, #96c93d);
      color: white;
      text-decoration: none;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 500;
      transition: all 0.3s ease;
      display: inline-block;
    }
    
    .file-actions a:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 10px rgba(0, 176, 155, 0.3);
    }
    
    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(5px);
      z-index: 1000;
      justify-content: center;
      align-items: center;
      animation: fadeIn 0.3s ease;
      padding: 15px;
    }
    
    .modal-content {
      background: white;
      padding: 25px;
      border-radius: 12px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      transform: translateY(0);
      animation: modalSlideIn 0.4s ease;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    
    .modal-content h3 {
      margin-bottom: 0;
      color: #4a4a4a;
      text-align: center;
      font-size: 18px;
    }
    
    .file-drop-area {
      border: 2px dashed #667eea;
      border-radius: 8px;
      padding: 30px 15px;
      text-align: center;
      margin: 0;
      cursor: pointer;
      transition: all 0.3s ease;
      background: rgba(102, 126, 234, 0.05);
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      min-height: 120px;
      position: relative;
    }
    
    .file-drop-area:hover {
      background: rgba(102, 126, 234, 0.1);
    }
    
    .file-drop-area input[type="file"] {
      display: none;
    }
    
    .form-buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 15px;
    }
    
    .submit-btn {
      padding: 10px;
      background: linear-gradient(to right, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 14px;
    }
    
    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 10px rgba(102, 126, 234, 0.3);
    }
    
    .close-btn {
      padding: 10px;
      background: #f1f1f1;
      color: #666;
      border: none;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 14px;
    }
    
    .close-btn:hover {
      background: #e0e0e0;
      transform: translateY(-2px);
    }
    
    /* Animations */
    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    
    @keyframes fadeOut {
      to {
        opacity: 0;
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    @keyframes modalSlideIn {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    /* Responsive adjustments for larger screens */
    @media (min-width: 768px) {
      .header {
        flex-direction: row;
        justify-content: space-between;
        padding: 20px;
      }
      
      .header h1 {
        margin-bottom: 0;
        font-size: 28px;
        text-align: left;
      }
      
      .logout-btn {
        width: auto;
        padding: 12px 24px;
      }
      
      .upload-btn {
        padding: 15px 30px;
        font-size: 16px;
      }
      
      .file-list {
        padding: 20px;
      }
      
      .file-item {
        flex-direction: row;
        align-items: center;
        padding: 15px;
      }
      
      .file-name {
        font-size: 16px;
      }
      
      .file-actions a {
        padding: 8px 16px;
        font-size: 14px;
      }
      
      .modal-content {
        padding: 40px;
      }
      
      .modal-content h3 {
        font-size: 22px;
      }
      
      .form-buttons {
        flex-direction: row;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <% if (uploadSuccess) { %>
      <div class="notification">File uploaded successfully!</div>
    <% } %>

    <div class="header">
      <h1>Welcome <span><%= user.username %></span></h1>
      <a href="/user/logout" class="logout-btn">Logout</a>
    </div>

    <button class="upload-btn" onclick="openModal()">Upload File</button>

    <div class="file-list">
      <% if (files && files.length > 0) { %>
        <% files.forEach(file => { %>
          <div class="file-item">
            <div class="file-name"><%= file.filename %></div>
            <div class="file-actions">
              <a href="/download/<%= file._id %>" download="<%= file.filename %>" target="_blank">Download</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No files uploaded yet.</p>
      <% } %>
    </div>

    <div class="modal" id="uploadModal">
      <div class="modal-content">
        <h3>Upload Your File</h3>
        <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
          <label id="fileDropArea" class="file-drop-area">
            <span id="fileLabel">Click here to select a file</span>
            <input type="file" name="file" id="fileInput" required />
          </label>
          <div class="form-buttons">
            <button type="submit" class="submit-btn">Submit</button>
            <button type="button" class="close-btn" onclick="closeModal()">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('uploadModal').style.display = 'flex';
    }

    function closeModal() {
      document.getElementById('uploadModal').style.display = 'none';
      // Reset the file input and label text
      document.getElementById('fileInput').value = '';
      document.getElementById('fileLabel').textContent = 'Click here to select a file';
    }

    // Function to handle file selection
    function handleFileSelection() {
      const fileInput = document.getElementById('fileInput');
      const fileLabel = document.getElementById('fileLabel');
      
      fileInput.addEventListener('change', function() {
        if (this.files.length > 0) {
          fileLabel.textContent = this.files[0].name;
        }
      });
      
      // Highlight file drop area when file is dragged over
      const fileDropArea = document.getElementById('fileDropArea');
      
      fileDropArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileDropArea.style.background = 'rgba(102, 126, 234, 0.2)';
        fileDropArea.style.borderColor = '#4a4a4a';
      });
      
      fileDropArea.addEventListener('dragleave', () => {
        fileDropArea.style.background = 'rgba(102, 126, 234, 0.05)';
        fileDropArea.style.borderColor = '#667eea';
      });
      
      fileDropArea.addEventListener('drop', (e) => {
        e.preventDefault();
        fileDropArea.style.background = 'rgba(102, 126, 234, 0.05)';
        fileDropArea.style.borderColor = '#667eea';
        
        if (e.dataTransfer.files.length) {
          fileInput.files = e.dataTransfer.files;
          fileLabel.textContent = e.dataTransfer.files[0].name;
        }
      });
    }

    // Add form validation
    function setupFormValidation() {
      const uploadForm = document.getElementById('uploadForm');
      
      if (uploadForm) {
        uploadForm.addEventListener('submit', function(e) {
          const fileInput = document.getElementById('fileInput');
          
          if (!fileInput.files || fileInput.files.length === 0) {
            e.preventDefault();
            alert('Please select a file before submitting!');
          }
        });
      }
    }

    // Auto-close notification after 3 seconds
    document.addEventListener('DOMContentLoaded', function() {
      const notification = document.querySelector('.notification');
      if (notification) {
        setTimeout(() => {
          notification.style.display = 'none';
          notification.style.animation = 'fadeOut 0.5s ease forwards';
          setTimeout(() => notification.remove(), 500);
        }, 3000);
      }
      
      // Initialize file handling
      handleFileSelection();
      setupFormValidation();
    });
  </script>
</body>
</html>